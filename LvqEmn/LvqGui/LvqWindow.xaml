<Window x:Class="LvqGui.LvqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       	xmlns:emnPlot="clr-namespace:EmnExtensions.Wpf.Plot;assembly=EmnExtensionsWpf"

        Title="LvqWindow" Height="600" Width="800" xmlns:my="clr-namespace:LvqGui">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>
        <emnPlot:NewPlotControl Name="plotControl"  />

        <GridSplitter Grid.Column="1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="2"  ResizeDirection="Columns"/>
        <ScrollViewer Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" >
            <TreeView>
                <TreeViewItem Header="General Options" IsExpanded="True" HorizontalAlignment="Stretch">
                    <my:AppSettings VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto"/>
                </TreeViewItem>
                <TreeViewItem Header="Create Dataset" IsExpanded="True">
                    <TreeViewItem Header="Load Data">
                    </TreeViewItem>
                    <TreeViewItem Header="Make Gaussian Clouds" IsExpanded="True">
                        <my:CreateDataSet  />
                    </TreeViewItem>
                    <TreeViewItem Header="Make Star-tailed Clouds" IsExpanded="True">
                        <my:CreateDataSetStar  />
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Create Lvq Model">
                    <my:CreateLvqModel/>
                </TreeViewItem>
                <TreeViewItem Header="Train Model">
                    <my:TrainingControl/>
                </TreeViewItem>
            </TreeView>
        </ScrollViewer>
        <!--
        <TabControl Grid.Row="0" Grid.Column="2" Visibility="Hidden" >
            <TabItem Header="Create Dataset" Name="datasetTabs">
                <TabControl >
                    <TabItem Header="Load Data">
                        <Grid />
                    </TabItem>
                    <TabItem Header="Gaussian Clouds">
                        <Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Star Dataset">
                        <Grid>
                            <my:CreateDataSetStar  />
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    -->
    </Grid>
</Window>
