<Window x:Class="LvqGui.LvqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       	xmlns:emnPlot="clr-namespace:EmnExtensions.Wpf.Plot;assembly=EmnExtensionsWpf"

        Title="LvqWindow" Height="600" Width="800" xmlns:my="clr-namespace:LvqGui">
    <Window.Resources>
        <my:LvqWindowValues x:Key="windowValues"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ResourceKey=windowValues}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <emnPlot:NewPlotControl Name="plotControl" ShowGridLines="{Binding ElementName=generalOptions, Path=Values.ShowGridLines, Mode=TwoWay}"   />

        <GridSplitter Grid.Column="1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="3"  ResizeDirection="Columns"/>
        <TabControl Grid.Row="0" Grid.Column="2">
            <TabItem Header="General Options">
                <my:AppSettings VerticalAlignment="Stretch" x:Name="generalOptions" />
            </TabItem>
            <TabItem Header="Create Dataset" Name="datasetTabs">
                <TabControl >
                    <TabItem Header="Load Data">
                    </TabItem>
                    <TabItem Header="Gaussian Clouds">
                        <my:CreateDataSet DataContext="{Binding CreateDataSetParams}"/>
                    </TabItem>
                    <TabItem Header="Star Dataset">
                        <my:CreateDataSetStar  />
                    </TabItem>
                </TabControl>
            </TabItem>

            <TabItem Header="Create Lvq Model">
                <my:CreateLvqModel/>
            </TabItem>
            <TabItem Header="Train Model">
                <my:TrainingControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
