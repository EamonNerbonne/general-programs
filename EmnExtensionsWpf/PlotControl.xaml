<UserControl x:Class="EmnExtensions.Wpf.PlotControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:emnExt="clr-namespace:EmnExtensions.Wpf" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="10"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" MinWidth="10"/>
        </Grid.ColumnDefinitions>
        <emnExt:GraphControl x:Name="graph" Grid.Column="1" Grid.Row="1" />

        <emnExt:TickedLegendControl x:Name="leftLegend" Grid.Row="1" SnapTo="Right" />
        <emnExt:TickedLegendControl x:Name="lowerLegend" Grid.Row="2" Grid.Column="1" />
    </Grid>
</UserControl>
