<UserControl x:Class="EmnExtensions.Wpf.AutoHistogram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="100" MinWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Canvas Grid.Row="2" Name="lowerLegend" Grid.ColumnSpan="3" />
        <Canvas Name="leftLegend" Grid.RowSpan="3" />
            <Rectangle Stroke="Gray" Grid.Column="1" Grid.Row="1"  SnapsToDevicePixels="True" />
        <Canvas Grid.Column="1" Grid.Row="1" Name="densityCanvas" SnapsToDevicePixels="True" >
        </Canvas>
    </Grid>
</UserControl>
