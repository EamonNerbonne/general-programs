<UserControl x:Class="EmnExtensions.Wpf.SimpleGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:emnExt="clr-namespace:EmnExtensions.Wpf" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="10" />
            <RowDefinition Height="*" MinHeight="10" />
            <RowDefinition Height="Auto" MinHeight="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="10"/>
            <ColumnDefinition Width="*" MinWidth="10"/>
            <ColumnDefinition Width="Auto" MinWidth="10"/>
        </Grid.ColumnDefinitions>
        <Grid Name="graphGrid"  Grid.Column="1" Grid.Row="1" >
        </Grid>
        <emnExt:TickedLegendControl x:Name="leftLegend" Grid.Row="1" SnapTo="Right"  />
        <emnExt:TickedLegendControl x:Name="lowerLegend" Grid.Row="2" Grid.Column="1"  />
    </Grid>
</UserControl>
