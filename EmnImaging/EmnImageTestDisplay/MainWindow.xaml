<Window x:Class="EmnImageTestDisplay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:emn="clr-namespace:EmnImageTestDisplay"
    Title="MainWindow" Height="500" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*" />
            <RowDefinition Height="135.198*" />
            <RowDefinition Height="52*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*" />
            <ColumnDefinition Width="148*" />
        </Grid.ColumnDefinitions>
        <emn:WordDetail x:Name="wordDetail" Grid.Column="1" />
        <emn:ImageAnnotViewbox x:Name="imgViewbox" Grid.RowSpan="3" />
        <emn:ZoomRect x:Name="zoomRect" Grid.Column="1" Grid.Row="1" />
        <emn:LogControl x:Name="logControl" Grid.Column="1" Grid.Row="2" />
    </Grid>
</Window>
