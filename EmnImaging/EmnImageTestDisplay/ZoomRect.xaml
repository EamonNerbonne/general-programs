<UserControl x:Class="EmnImageTestDisplay.ZoomRect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Background="Black">
    
    <Rectangle Name="zoomRect" Stroke="Black" SizeChanged="onSizeChanged">
        <Rectangle.Fill>
            <VisualBrush ViewportUnits="RelativeToBoundingBox" Viewport="0,0,1,1" Viewbox="0,0,100,50" ViewboxUnits="Absolute"/>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
