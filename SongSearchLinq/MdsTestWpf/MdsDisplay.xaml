<Window x:Class="MdsTestWpf.MdsDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MdsDisplay" Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="236*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>
        <ProgressBar Name="mdsProgress" Margin="4,4,4,4" Grid.Row="2" />
        <Viewbox Name="pointViewbox" Stretch="Uniform" Margin="4,4,4,4" >
            <Canvas Name="pointCanvas"></Canvas>
        </Viewbox>
    </Grid>
</Window>
