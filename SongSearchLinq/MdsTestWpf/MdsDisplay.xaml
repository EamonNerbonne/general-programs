<Window x:Class="MdsTestWpf.MdsDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:emnExt="clr-namespace:EmnExtensions.Wpf;assembly=EmnExtensionsWpf"
    Title="MdsDisplay" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="389*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="381*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="195*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="929*" />
            <RowDefinition Height="33" />
        </Grid.RowDefinitions>
        <ProgressBar Name="mdsProgress" Margin="4,4,4,4" Grid.Row="1" Grid.ColumnSpan="3" />
        <Viewbox Name="pointViewbox" Stretch="Uniform" Margin="4,4,0,4">
            <Canvas Name="pointCanvas"></Canvas>
        </Viewbox>
        <emnExt:PlotControl Grid.Column="2" Name="histo"  />
        <emnExt:LogControl Name="logControl" ClaimStandardError="true" ClaimStandardOut="true" Grid.Column="4" />
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Name="gridSplitter1" Grid.RowSpan="2"  />
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Name="gridSplitter2"  />
        <Label Grid.Column="4" Grid.Row="1" Margin="4,4,4,4" Name="labelETA">Label</Label>
    </Grid>
</Window>
