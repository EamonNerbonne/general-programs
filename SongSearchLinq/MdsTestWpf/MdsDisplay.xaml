<Window x:Class="MdsTestWpf.MdsDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:emnExt="clr-namespace:EmnExtensions.Wpf;assembly=EmnExtensionsWpf"
    Title="MdsDisplay" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="929*" />
            <RowDefinition Height="33" />
        </Grid.RowDefinitions>
        <ProgressBar Name="mdsProgress" Margin="4,4,4,4" Grid.Row="1" Grid.ColumnSpan="2" />
        <Viewbox Name="pointViewbox" Stretch="Uniform" Margin="4,4,0,4">
            <Canvas Name="pointCanvas"></Canvas>
        </Viewbox>
        <emnExt:AutoHistogram Grid.Column="1" Name="histo" Width="Auto" Height="Auto" />
        <emnExt:LogControl Name="logControl" ClaimStandardError="true" ClaimStandardOut="true" Grid.Column="3" />
        <GridSplitter Grid.Column="2" HorizontalAlignment="Stretch" Name="gridSplitter1" Grid.RowSpan="2"  />
        <Label Grid.Column="3" Grid.Row="1" Margin="4,4,4,4" Name="labelETA">Label</Label>
    </Grid>
</Window>
